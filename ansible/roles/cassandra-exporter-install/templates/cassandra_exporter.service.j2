[Unit]
Description=Cassandra Exporter
After=cassandra.service

[Service]
PIDFile=/opt/cassandra/cassandra_exporter/cassandra_exporter.pid
ExecStart=/bin/java -jar /opt/cassandra/cassandra_exporter-2.3.2-all.jar /opt/cassandra/cassandra_exporter-config.yml
StandardOutput=journal
StandardError=journal
User=cassandra
Group=cassandra
LimitNOFILE=100000
LimitMEMLOCK=infinity
LimitNPROC=32768
LimitAS=infinity
Restart=always

[Install]
WantedBy=cassandra.service
